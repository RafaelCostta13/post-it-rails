<div >
	<%= form_with(url: create_path, method: :post, local: false) do |format| %>
		<h3 class="mb-5 title-color">Bloco de notas</h3>
		<div class="form-group mb-3">
			<input class="form-control" type="text" name="title" placeholder="Assunto">
		</div>
		<div class="form-group">
			<textarea class="form-control" rows=5 placeholder="texto" name="description"></textarea>
		</div>
		<input class="btn btn-primary mt-3" type="submit" name="submit" value="Criar Nota">

	<% end %>
</div>